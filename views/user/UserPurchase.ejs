<%- include ('../layouts/header') %>
<body>
    <%- include ('../layouts/sub-header') %>
    <section class="container userInfo-background">
        <div class="container-fluid">
            <div class="row clearfix">
                <%- include('../layouts/info-header') %>                
                <div class="col-8">
                    <div class="userInfo-col">
                        <div class="User-title">
                            <h5><i class="fa fa-address-card-o" aria-hidden="true"></i> QUẢN LÝ VÉ ĐẶT</h5>
                            <div>Quản lý lịch sử đặt vé của bạn.</div>
                        </div>
                        <div class="">
                            <ul style="margin: 10px 20px" class="nav nav-tabs menu-status">
                                <li class="nav-item">
                                    <a class="nav-link link1 active optionEdit" href="#option1" data-bs-toggle="tab"
                                        data-bs-target="#option1" role="tab" aria-controls="status"
                                        aria-selected="true">Đã đặt</a>
                                </li>
                                <li class="nav-item">
                                    <a style="color: #eee;" class="nav-link link1 optionEdit" href="#option2"
                                        data-bs-toggle="tab" data-bs-target="#option2" role="tab" aria-controls="status"
                                        aria-selected="true">Đã sử dụng</a>
                                </li>
                            </ul>

                            <form class="purchase-search">
                                <input type="text" placeholder="Tìm kiếm theo tên, mã vé,..." name="search">
                                <button type="submit"><i class="fa fa-search"></i></button>
                            </form>

                            <div class="tab-content">
                                <div class="tab-pane active" id="option1" role="tabpanel">
                                    <form action="" method="get">
                                        <div class="order-common">
                                            <div class="purchase-order">      
                                                <%billunuse.forEach(function(bill){%> 
                                                    <div class="purchase-film">
                                                        <a data-toggle="collapse" href="#<%=bill._id%>" role="button"
                                                            aria-expanded="false" aria-controls="collapseDetail1">
                                                            <div class="row-detail">
                                                                <div><img class="img-order-list" src="<%= bill.photo%>">
                                                                </div>
    
                                                                <div class="name-order-list"><%= bill.film%> </div>
    
                                                                <div class="price-order-list"><%= bill.total%></div>
                                                            </div>
                                                        </a>
                                                        <div class="collapse" id="<%=bill._id%>">
                                                            <div class="card detail-purchase">
                                                                <div class="row-detail">
                                                                    <div>Số ghế:</div>\
                                                                    <% var ticket=[] %>
                                                                    <% var totalticket=0 %>
                                                                    <% bill.ticket.forEach( function(tk){ %>
                                                                        <%
                                                                            ticket.push(tk.name)
                                                                            totalticket+=tk.price
                                                                        %>
                                                                    <% }); %>
                                                                    <div>
                                                                        <%= ticket.join(', ') %>
                                                                    </div>                                                                    
                                                                    <div class="price-order-list"><%=totalticket%></div>
                                                                </div>
                                                                <div class="row-detail">
                                                                    <div>Rạp:</div>
                                                                    <div><%= bill.room%></div>
                                                                </div>
                                                                <div class="row-detail">
                                                                    <div>COMBO:</div>
                                                                    <% var snacksarr=[] %>
                                                                    <% var totalsn=0 %>
                                                                    <% bill.snack.forEach( function(sn){ %>
                                                                        <%
                                                                            snacksarr.push(sn.name+" (x"+sn.quantity+")")
                                                                            totalsn+=sn.price
                                                                        %>
                                                                    <% }); %>
                                                                    <div><%= snacksarr.join(', ') %></div>                                                                    
                                                                    <div class="price-order-list"><%=totalsn%></div>
                                                                </div>
    
                                                            </div>
                                                        </div>
                                                    </div>
                                                <%})%>
                                            </div>
                                            <div class="total-order">
                                                <div class="price-order">Tổng số tiền: 240.000 VNĐ</div>
                                                <div class="footer-order">
                                                    <div class="time-order">
                                                        <span>Vé được đặt vào lúc 12:00
                                                            02/02/2021</span>
                                                    </div>
                                                    <div class="btn-each-order">
                                                        <button class="contact-order">Liên hệ</button>
                                                        <button class="cancel-order">Hủy vé</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="tab-pane" id="option2" role="tabpanel">
                                    <form action="" method="get">
                                        <div class="order-common">
                                            <div class="purchase-order">
                                                <div class="purchase-film">
                                                    <a data-toggle="collapse" href="#collapseDetail1" role="button"
                                                        aria-expanded="false" aria-controls="collapseDetail1">
                                                        <div class="row-detail">
                                                            <div><img class="img-order-list" src="../img/no_img.png">
                                                            </div>

                                                            <div class="name-order-list">Gia đình phép thuật </div>

                                                            <div class="price-order-list">120.000 VNĐ</div>
                                                        </div>
                                                    </a>
                                                    <div class="collapse" id="collapseDetail1">
                                                        <div class="card detail-purchase">
                                                            <div class="row-detail">
                                                                <div>Số ghế:</div>
                                                                <div>A2, A3</div>
                                                                <div class="price-order-list">80.000 VNĐ</div>
                                                            </div>
                                                            <div class="row-detail">
                                                                <div>Rạp:</div>
                                                                <div>CINEMA 1</div>
                                                            </div>
                                                            <div class="row-detail">
                                                                <div>COMBO:</div>
                                                                <div>Khoai tây lắc phô mai (x1)</div>
                                                                <div class="price-order-list">40.000 VNĐ</div>
                                                            </div>

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="total-order">
                                                <div class="price-order">Tổng số tiền: 120.000 VNĐ</div>
                                                <div class="footer-order">
                                                    <div class="time-order">
                                                        <span>Vé được đặt vào lúc 12:00
                                                            02/01/2021</span>
                                                    </div>
                                                    <div class="btn-each-order">
                                                        <button class="contact-order">Liên hệ</button>
                                                        <button class="cancel-order">Hủy vé</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>
</body>
<%- include ('../layouts/footer') %>
</html>
                                                                <option value="Sắp khởi chiếu">Sắp khởi chiếu</option>
                                                                <option value="Đã chiếu xong">Đã chiếu xong</option>
                                                            </select>
                                                        </div>
                                                        <div class="ad-phim">
                                                            <label class="label-chitiet" for="">Chi tiết</label>
                                                            <textarea class="input-sua-area detail" cols="20"
                                                                rows="10" name="detail"></textarea>
                                                        </div>
                                                        <div class="ad-phim">
                                                            <label class="label-chitiet" for="">Trailer</label>
                                                            <input class="input-sua trailer" type="url" name="trailer">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button"
                                                        class="btn btn-secondary close-footer">Đóng</button>
                                                    <button class="btn btn-warning" type="submit" >Thêm</button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                            </th>
                        </tr>
                    </thead>
                    <tbody id="bodyAdd">
                        <% films.forEach(function(film){ %>
                            <tr class="<%= film.slug %>">
                                <th scope="row" style="width: 15%">
                                    <img style="width: 100%" src="<%=film.photo%>" alt="">
                                </th>                                
                                <td style="width: 20%;">
                                    <div><%=film.nameEN%></div>
                                    <div><%=film.nameVN%></div>
                                </td>
                                <td><%= film.directors %></td>
                                <td><%= film.premiere %></td>
                                <td><%= film.idCat %></td>                                
                                <td>
                                    <div><%= film.status%></div>
                                </td>
                                <td>
                                    <div class="btn-mode">
                                        <button type="button" class="btnEditFilm" value="<%= film.slug %>"><i class="fa fa-pencil-square-o"

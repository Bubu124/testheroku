<%- include ('../layouts/header')%>

<body>
    <%- include ('../layouts/admin-sub-header')%>
    <div class="wrapper-index">
        <div class="ad-movie">
            <div class="h5-detail">Quản lý phim</div>
            <span class="line-detail"></span>
            <form action="">
                <table class="table table-striped  table-bordered" style="font-size: 15px;">
                    <thead>
                        <tr>
                            <th scope="col"></th>
                            <th scope="col">Tên phim</th>
                            <th scope="col">Đạo diễn</th>
                            <th scope="col">Khởi chiếu</th>
                            <th scope="col">Thể loại</th>
                            <th scope="col">Rating</th>
                            <th scope="col">Tình trạng</th>
                            <th scope="col" style="width: 1%;">
                                <div class="btn-admin">
                                    <button type="button" id="btnAddFilm" class="btn-common btn-buy" data-toggle="modal"
                                        data-target=".bd-example-modal-lg"><i class="fa fa-plus" aria-hidden="true"></i>
                                        Thêm mới</button>
                                    <form action="" method="">
                                        <div id="modalAddFilm" class="modal">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h4 class="modal-title">Thêm phim</h4>
                                                    <button type="button" class="close-footer close"
                                                        data-dismiss="modal">&times;</button>
                                                </div>
                                                <div class="modal-body-plus">
                                                    <div class="modal-left">
                                                        <div class="col-5 img-add">
                                                            <img id="img-edit-item" class="imgAddPreview"
                                                                src="../img/no_img.webp" style="width: 100%;">
                                                            <input type="file" class="form-control imgChangeAdd"
                                                                name="image" id="img1"
                                                                accept="image/png, image/jpeg, image/jpg"
                                                                style="display: none;">
                                                            <label class="btn-common" id="btn-edit-img-item"
                                                                for="img1">Chọn ảnh</label>
                                                        </div>
                                                    </div>
                                                    <div class="modal-right">
                                                        <div class="ad-phim">
                                                            <label class="label-chitiet" for="">Tên phim</label>
                                                            <div class="input-ten">
                                                                <input class="input-sua" placeholder="Tên tiếng anh"
                                                                    type="text">
                                                                <input class="input-sua" placeholder="Tên tiếng việt"
                                                                    type="text">
                                                            </div>
                                                        </div>
                                                        <div class="ad-phim">
                                                            <label class="label-chitiet" for="">Đạo diễn</label>
                                                            <input class="input-sua" type="text">
                                                        </div>
                                                        <div class="ad-phim">
                                                            <label class="label-chitiet" for="">Diễn viên</label>
                                                            <input class="input-sua" type="text">
                                                        </div>
                                                        <div class="ad-phim">
                                                            <label class="label-chitiet" for="">Khởi chiếu</label>
                                                            <input class="input-sua" type="date">
                                                        </div>
                                                        <div class="ad-phim">
                                                            <label class="label-chitiet" for="">Thời gian</label>
                                                            <input class="input-sua" type="number">
                                                        </div>
                                                        <div class="ad-phim">
                                                            <label class="label-chitiet" for="">Thể loại</label>
                                                            <select class="input-sua" name="idCat" id="">
                                                                <%cats.forEach(function(cat){%>
                                                                    <option value="<%=cat._id%>"><%=cat.title%></option>
                                                                <%})%>
                                                            </select>
                                                        </div>
                                                        <div class="ad-phim">
                                                            <label class="label-chitiet" for="">Tình trạng</label>
                                                            <select class="input-sua" name="" id="">
                                                                <option value="1">Đang khởi chiếu</option>
                                                                <option value="2">Sắp khởi chiếu</option>
                                                                <option value="3">Đã chiếu xong</option>
                                                            </select>
                                                        </div>
                                                        <div class="ad-phim">
                                                            <label class="label-chitiet" for="">Chi tiết</label>
                                                            <textarea class="input-sua-area" name="" id="" cols="20"
                                                                rows="10"></textarea>
                                                        </div>
                                                        <div class="ad-phim">
                                                            <label class="label-chitiet" for="">Trailer</label>
                                                            <input class="input-sua" type="url">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button"
                                                        class="btn btn-secondary close-footer">Đóng</button>
                                                    <button type="button" class="btn-common close-footer">Thêm</button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% films.forEach(function(film){ %>
                            <tr>
                                <th scope="row" style="width: 15%">
                                    <img style="width: 100%" src="<%=film.photo%>" alt="">
                                </th>                                
                                <td style="width: 20%;">
                                    <div><%=film.nameEN%></div>
                                    <div><%=film.nameVN%></div>
                                </td>
                                <td><%= film.directors %></td>
                                <td><%= film.premiere %></td>
                                <td><%= film.idCat %></td>
                                <td>
                                    Phim như bìu
                                </td>
                                <td>
                                    <div><%= film.status%></div>
                                </td>
                                <td>
                                    <div class="btn-mode">
                                        <button type="button" class="btnEditFilm" value="<%= film._id %>"><i class="fa fa-pencil-square-o"
                                            aria-hidden="true"></i></button>
                                        <button type="button"><i class="fa fa-times" aria-hidden="true"></i></button>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                        

                        <!-- Edit Film's infomation -->
                        <form action="" method="">
                            <div id="modalEditFilm" class="modal">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h4 class="modal-title">Chỉnh sửa thông tin phim</h4>
                                        <button type="button" class="close-footer close"
                                            data-dismiss="modal">&times;</button>
                                    </div>
                                    <div class="modal-body-plus">
                                        <div class="modal-left">
                                            <div class="col-5 img-add">
                                                <img id="img-edit-item" class="imgAddPreview" src="../img/no_img.webp"
                                                    style="width: 100%;">
                                                <input type="file" class="form-control imgChangeAdd" name="image"
                                                    id="img1" accept="image/png, image/jpeg, image/jpg"
                                                    style="display: none;">
                                                <label class="btn-common" id="btn-edit-img-item" for="img1">Chọn
                                                    ảnh</label>
                                            </div>
                                        </div>
                                        <div class="modal-right">
                                            <div class="ad-phim">
                                                <label class="label-chitiet" for="">Tên phim</label>
                                                <div class="input-ten">
                                                    <input class="input-sua nameen" placeholder="Tên tiếng anh" type="text">
                                                    <input class="input-sua namevn" placeholder="Tên tiếng việt" type="text">
                                                </div>
                                            </div>
                                            <div class="ad-phim">
                                                <label class="label-chitiet" for="">Đạo diễn</label>
                                                <input class="input-sua directors" type="text">
                                            </div>
                                            <div class="ad-phim">
                                                <label class="label-chitiet" for="">Diễn viên</label>
                                                <input class="input-sua cast" type="text">
                                            </div>
                                            <div class="ad-phim">
                                                <label class="label-chitiet" for="">Khởi chiếu</label>
                                                <input class="input-sua premiere" type="date">
                                            </div>
                                            <div class="ad-phim">
                                                <label class="label-chitiet" for="">Thời gian</label>
                                                <input class="input-sua time" type="number">
                                            </div>
                                            <div class="ad-phim">
                                                <label class="label-chitiet" for="">Thể loại</label>
                                                <select class="input-sua" name="" id="">
                                                    <%cats.forEach(function(cat){%>
                                                        <option value="<%=cat._id%>"><%=cat.title%></option>
                                                    <%})%>
                                                </select>
                                            </div>
                                            <div class="ad-phim">
                                                <label class="label-chitiet" for="">Tình trạng</label>
                                                <select class="input-sua" name="" id="">
                                                    <option value="1">Đang khởi chiếu</option>
                                                    <option value="2">Sắp khởi chiếu</option>
                                                    <option value="3">Đã chiếu xong</option>
                                                </select>
                                            </div>
                                            <div class="ad-phim">
                                                <label class="label-chitiet" for="">Chi tiết</label>
                                                <textarea class="input-sua-area detail" name="" id="" cols="20"
                                                    rows="10"></textarea>
                                            </div>
                                            <div class="ad-phim">
                                                <label class="label-chitiet" for="">Trailer</label>
                                                <input class="input-sua trailer" type="url">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary close-footer">Đóng</button>
                                        <button type="button" class="btn-common close-footer">Xác nhận</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </tbody>
                </table>

            </form>
        </div>
    </div>
    <script src="../js/jquery.min.js"></script>
    <script src="../js/bootstrap.min.js"></script>
    <script src="../js/trigger.js"></script>
    <script src="../js/modal.js"></script>
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
</body>

</html>
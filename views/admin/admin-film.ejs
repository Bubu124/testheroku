<script>
    var imgavtadd = document.getElementsByClassName('imgavtadd')[0]    
    function imgAvtAdd(){
        if (event.target.files.length > 0) {
            let src = URL.createObjectURL(event.target.files[0]);
            document.getElementsByClassName('imgtest')[0].value=src
            imgavtadd.src=src;
        }
    }
    var imgbgadd = document.getElementsByClassName('imgbgadd')[0]    
    function imgBgAdd(){
        if (event.target.files.length > 0) {
            let src = URL.createObjectURL(event.target.files[0]);
            imgbgadd.src=src;
        }
    }
    var imgavtedit = document.getElementsByClassName('imgavtedit')[0]    
    function imgAvtEdit(){
        if (event.target.files.length > 0) {
            let src = URL.createObjectURL(event.target.files[0]);
            imgavtedit.src=src;
        }
    }
    var imgbgedit = document.getElementsByClassName('imgbgedit')[0]    
    function imgBgEdit(){
        if (event.target.files.length > 0) {
            let src = URL.createObjectURL(event.target.files[0]);
            imgbgedit.src=src;
        }
    }
</script>

<script>
    //Add element sc
    $('#btnAddCT').on('click', () => {
        var htmlObj = $('#form-addCT');
        htmlObj.append(`
        <div class="lc-category">
            `+ $('.add-category').html() + `
            <div class="">
                <button type="button" class="btnDelSC"> <i class="fa fa-times close-ct" aria-hidden="true"></i></button>
            </div>
        </div>`);
        $('.btnDelSC').each(function () {
            var $this = $(this);
            var rowAddSt = $this.closest('.lc-category');
            $this.click(function (e) {
                e.preventDefault();
                rowAddSt.remove();
            })
        })
    })
</script>
</html>
<%- include('../layouts/header') %>

<body>
    <%- include('../layouts/admin-sub-header') %>
    <div class="wrapper-index">
        <div class="ad-movie">
            <div style="display: flex; justify-content: space-between;
            flex-wrap: wrap;" >
                <div class="h5-detail">Quản lý sự kiện</div>
                <form action="" method="get" class="purchase-search search-admin" style="width: 40%; padding-left: 0 !important">
                    <input type="text" class="form-control" placeholder="Tìm kiếm theo tên sự kiện" name="name">
                    <button class="submitsearch btn btn-buy btnSearchTime" type="submit"><i class="fa fa-search"></i></button>
                </form>
            </div>
            <span class="line-detail"></span>            
                <table class="table table-bordered" style="font-size: 15px;">
                    <thead>
                        <tr>
                            <th scope="col"></th>
                            <th scope="col">Tiêu đề</th>
                            <th scope="col" style="width: 9%;">Ngày tạo</th>
                            <th scope="col">Nội dung</th>
                            <th scope="col" style="width: 1%;">
                                <div class="btn-admin">
                                    <button type="button" id="btnAddEvent" class="btn-common btn-buy btn-add-room"
                                        data-toggle="modal" data-target=".bd-example-modal-lg"><i class="fa fa-plus"
                                            aria-hidden="true"></i>
                                        Thêm mới</button>
                                    <form action="/admin/event/add" method="post" enctype="multipart/form-data">
                                        <div id="modalAddEvent" class="modal">
                                            <div class="modal-content content-event">
                                                <div class="modal-header">
                                                    <h4 class="modal-title">Thêm sự kiện</h4>
                                                    <button type="button" class="close-event close"
                                                        data-dismiss="modal">&times;</button>
                                                </div>
                                                <div class="modal-body-plus modal-body-event">
                                                    <div class="event-up">
                                                        <div class="modal-left">
                                                            <div class="col-5 img-add img-event">
                                                                <img id="img-edit-item" class="imgAddPreview imgadd"
                                                                src="../img/no_img.webp" style="width: 100%;">
                                                                <input type="file" class="form-control imgChangeAdd"
                                                                    name="photo" id="img1" onchange="imgAdd()"
                                                                    accept="image/png, image/jpeg, image/jpg"
                                                                    style="display: none;">
                                                                <label class="btn-common" id="btn-edit-img-item"
                                                                    for="img1">Thêm ảnh</label>
                                                            </div>
                                                        </div>
                                                        <div class="modal-right" style="padding-top: 19px;">                                                                                                               
                                                            <label class="label-chitiet" for="">Tiêu đề</label>                                                                                                                
                                                            <div class="input-ten">
                                                                <input style="width: 100% !important;padding: 10px;" class="form-control input-sua" placeholder="Tiêu đề" type="text" name="title">
                                                            </div>
                                                            <label class="label-chitiet" for="">Thể loại</label> 
                                                            <div>
                                                                <select name="type" class="form-control selecttype" onchange="checkchange()">                                                            
                                                                    <option value="Tin tức">Tin tức</option>
                                                                    <option value="Khuyến mãi">Khuyến mãi</option>
                                                                </select>
                                                            </div>
                                                            <div style="display: none;" class="inputkhuyenmai">
                                                                <div class="add-km">
                                                                    <input class="form-control idkm" type="text" placeholder="Mã khuyến mã" name="code"/>
                                                                    <input class="form-control valuekm" type="number" placeholder="Giá trị(%)" name="value"/>
                                                                </div>
                                                                <div class="add-km" style="margin-top: 5px;">
                                                                    <div class="time-km" style="margin-right: 5px;">
                                                                        Từ ngày<input class="form-control date-from-km" type="date" name="datefrom"/>
                                                                    </div>
                                                                    <div class="time-km">
                                                                        Đến ngày<input class="form-control date-to-km" type="date" name="dateto"/>
                                                                    </div>
                                                                </div>
                                                            </div>        
                                                        </div>
                                                    </div>
                                                    <div class="event-down">
                                                        <label class="label-chitiet" for="">Nội dung</label>
                                                        <textarea class="input-sua" id="eventContent" name="content"></textarea>
                                                    </div>
                                                </div>
                                                <div class="modal-footer footer-add">
                                                    <div class="footer-add-btn">
                                                        <button type="button"
                                                        class="btn btn-secondary close-event  close-CL">Đóng</button>
                                                        <button type="submit" class="btn-common close-event  close-AC">Thêm</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <%events.forEach(function(event){%> 
                            <tr>
                                <th scope="row" style="width: 15%">
                                    <img class="event-image" src="<%=event.photo%>" alt="">
                                </th>
                                <td class="event-tit">
                                    <%=event.title%>
                                </td>
                                <td><%=event.time.toJSON().slice(0,10).split('-').reverse().join('/')%></td>
                                <td class="event-des"><%-event.content%></td>
                                <td>
                                    <div class="btn-mode">
                                        <button type="button" id="btnEditEvent"><i class="fa fa-pencil-square-o"
                                                aria-hidden="true"></i></button>
                                        <button type="button"><i class="fa fa-times" aria-hidden="true"></i></button>
                                    </div>
                                </td>
                            </tr>
                        <%})%>
                        <!-- form nút sửa -->
                        <form action="" method="">
                            <div id="modalEditEvent" class="modal">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h4 class="modal-title">Chỉnh sửa thông tin sự kiện</h4>
                                        <button type="button" class="close-event close"
                                            data-dismiss="modal">&times;</button>
                                    </div>
                                    <div class="modal-body-plus">
                                        <div class="modal-left">
                                            <div class="col-5 img-add">
                                                <img id="img-edit-item" class="imgAddPreview" src="../img/no_img.png"
                                                    style="width: 100%;">
                                                <input type="file" class="form-control imgChangeAdd" name="image"
                                                    id="img2" accept="image/png, image/jpeg, image/jpg"
                                                    style="display: none;">
                                                <label class="btn-common" id="btn-edit-img-item" for="img2">Chọn
                                                    ảnh</label>
                                            </div>
                                        </div>
                                        <div class="modal-right">
                                            <label class="label-chitiet" for="">Tiêu đề</label>
                                            <div class="input-ten">
                                                <input style="width: 100% !important;" class="input-sua" placeholder="Tiêu đề" type="text">
                                            </div>
                                            <label class="label-chitiet" for="">Nội dung</label>
                                            <textarea class="input-sua" id="editEventContent"></textarea>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary close-event">Đóng</button>
                                        <button type="button" class="btn-common close-event">Thêm</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </tbody>
                </table>
        </div>
    </div>
    <script src="../js/bootstrap.min.js"></script>
    <script src="../ckeditor/ckeditor.js"></script>
    <script src="/js/admin-event.js"></script>
</body>
<script>
    var imgavtadd = document.getElementsByClassName('imgadd')[0]    
    function imgAdd() {
        if (event.target.files.length > 0) {
            let src = URL.createObjectURL(event.target.files[0]);            
            imgavtadd.src = src;
        }else{
            imgavtadd.src='../img/no_img.webp'            
        }
    }
    function checkchange(){
        if($("option:selected").val()=="Khuyến mãi"){            
            document.getElementsByClassName("inputkhuyenmai")[0].style.display = "block";                
        }else{
            document.getElementsByClassName("inputkhuyenmai")[0].style.display = "none";
        }        
    }
    
</script>
</html>